<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    <application>sacred-union-210613</application>
    <version>1</version>

    <runtime>java8</runtime>

    <automatic-scaling>
        <min-idle-instances>0</min-idle-instances>
        <max-idle-instances>6</max-idle-instances>
        <max-pending-latency>15s</max-pending-latency>
    </automatic-scaling>


    <static-files>

        <include path="/**.gif"/>
        <include path="/**.png"/>
        <include path="/**.jpg"/>
        <include path="/**.html"/>
        <include path="/**.ico"/>
        <include path="/**.js"/>
        <include path="/**.css"/>
        <include path="/stylesheets/main.css"/>
        <!--include the fonts-->
        <include path="/**.woff"/>
        <include path="/**.woff2"/>
        <include path="/**.otf"/>
        <include path="/**.ttf"/>
        <include path="/**.eot"/>
        <include path="/**.svg"/>

        <!-- include ui translation files -->
        <include path="/assets/i18n/**.json"/>

        <!--include apk files-->
        <include path="/**.apk"/>

    </static-files>

    <resource-files>
        <!--include apk files-->
        <include path="/**.apk"/>

    </resource-files>

    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>

    <sessions-enabled>true</sessions-enabled>
    <threadsafe>true</threadsafe>
    <precompilation-enabled>false</precompilation-enabled>

</appengine-web-app>